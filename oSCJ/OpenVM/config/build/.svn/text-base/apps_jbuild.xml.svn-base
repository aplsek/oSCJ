<project name = "apps"  default = "compile" basedir="../../src/apps">

<path id = "apps.classpath">  <pathelement location = "./lib"/>  </path>

<path id = "apps.bootclasspath">
     <pathelement location = "../syslib/user/build/ovm_platform.jar"/>
     <pathelement location = "../syslib/user/build/ovm_rt_custom.jar"/>
     <pathelement location = "../syslib/user/build/ovm_rt_user.jar"/></path>

<target name  = "compile">
   <javac 
        srcdir       = "."
        destdir      = "build/"
        bootclasspathref = "apps.bootclasspath"
        classpathref = "apps.classpath"
        excludes     = "build/"
        debug        = "on"
        target       = "1.1"/></target>


<target name =  "clean">
  <delete   includeEmptyDirs = "true" 
            failonerror      = "false">

       <fileset dir     = "build/" 
               includes = "**/*.class"/></delete></target>
 
</project>