<project name="Ovm" default="compile">
 
<property name = "jsrc" value="../../src"/>

<path     id   = "ovm.classpath">  <pathelement location="../../src" />   </path>
 
<target name   = "compile"> 
   <javac 
          srcdir="${jsrc}" 
          debug="on" 
          classpathref="ovm.classpath" 
          excludes="${exclude}"
          target="1.1"/></target>


<property name  = "exclude" value="
	   native/**,
	   syslib/**,
	   apps/**,
	   benchmark/**,
	   test/tools/**
	   s3/services/java/realtime/PCEPJavaMonitorImpl.java,
           s3/services/java/realtime/StrictPCEPJavaMonitorImpl.java,
           s3/services/java/ulv2/**"/>


<target name    = "clean">
    <delete failonerror = "false">
     <fileset dir = "${jsrc}"
	       includes = "**/*.*.*~,**/*.class"
	       excludes = "${exclude}"/></delete></target>

</project>
