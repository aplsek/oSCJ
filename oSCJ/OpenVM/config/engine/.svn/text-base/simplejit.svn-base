## -engine=simplejit selects the simplejit x86 and powerpc compiler.  Simplejit 
## 	supports the following options:

##   -debugPrint              enables verbose debug logging
-debugPrint	"false"
##   -simplejitopt            enables optimization
-simplejitopt   "false"
##   -simplejit-defer-ud-app  defers compiling UD app code to run time
-simplejit-defer-ud-app "false"

##   -verbose-simplejit       prints information about simplejit's compilation
-verbose-simplejit "false"

##   -simplejit-lazy-compilation=true -> compile lazily at the first invocation
##   -simplejit-lazy-compilation=false -> compile at the startup of the user domain
-simplejit-lazy-compilation "true"

-immortal-size     "6m"

s3.services.bootimage.ImageObserver \
	s3.services.simplejit.bootimage.SimpleJITBootImageCompileObserver( \
		OVMMakefile.in,	\
		gdbinit.in,     \
		debugPrint,	\
		simplejitopt, \
		simplejit-defer-ud-app, \
		simplejit-lazy-compilation, \
		verbose-simplejit)

ovm.core.execution.Activation$Factory \
	s3.services.simplejit.JitActivation$Factory

ovm.core.execution.Trampoline	s3.services.simplejit.SimpleJITTrampoline

