package ovm.core.services.timer;

/**
 * Convenient constant definitions for converting between different time
 * units.
 *
 * @author David Holmes
 *
 */
public final class TimeConversion
    extends ovm.core.OVMBase
{

    /** No instantiation */
    private TimeConversion(){}

    public static final int MILLIS_PER_SECOND = 1000;
    public static final int MICROS_PER_SECOND = 1000*1000;
    public static final int NANOS_PER_SECOND = 1000*1000*1000;
    public static final int MICROS_PER_MILLI = 1000;
    public static final int NANOS_PER_MILLI = 1000*1000;
    public static final int NANOS_PER_MICRO = 1000;
}
